{% extends 'base.html.twig' %}

{% block header_title %}Ajouter une annonce{% endblock %}

{% block body %}
    <div class="rope">
        {{ form_start(form) }}

        {# en cas d'erreur sur le formulaire #}
        {% if form_errors(form) or
                form_errors(form.title) or
                form_errors(form.content) or
                form_errors(form.category)
        %}
            <div class="notification notification_error">
                {{ form_errors(form) }}
                {{ form_errors(form.title) }}
                {{ form_errors(form.content) }}
                {{ form_errors(form.category) }}
            </div>
        {% endif %}

        <div class="form_group">
            {{ form_label(form.title, "Titre de l'annonce") }}
            {{ form_widget(form.title, { 'attr': {'class': 'form_input'}}) }}
        </div>

        <div class="form_group">
            {{ form_label(form.content, "Contenu de l'annonce") }}
            <div class="text-editor">
                <button class="text-editor__btn" type="button" name="add-bold"><i class="fa fa-bold"></i></button>
                <button class="text-editor__btn" type="button" name="add-italic"><i class="fas fa-italic"></i></button>
                <button class="text-editor__btn" type="button" name="add-underline"><i class="fas fa-underline"></i></button>
                <button class="text-editor__btn" type="button" name="add-delete"><i class="fas fa-strikethrough"></i></button>
                <button class="text-editor__btn" type="button" name="add-list"><i class="fas fa-list-ul"></i></button>
                <button class="text-editor__btn" type="button" name="add-url"><i class="fas fa-link"></i></button>
                <button class="text-editor__btn" type="button" name="add-img"><i class="far fa-image"></i></button>
            </div>
            {{ form_widget(form.content, {'id':'text-area_content', 'attr': {'class': 'form_input'}}) }}
        </div>

        <div class="form_group">
            {{ form_label(form.category, "Cat√©gorie de l'annonce") }}
            {{ form_widget(form.category, { 'attr': {'class': 'form_input'}}) }}
        </div>

        <div class="btn">
            {{ form_widget(form.save, { 'attr': {'class': 'btn_brown'}}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}