{% extends 'base.html.twig' %}

{% block body %}
    <form action="{{ path('admin_user') }}" method="post">
        <input id="search_username" name="search_username" type="text" placeholder="Recherche par nom d'utilisateur">
    </form>

    {% if list_users %}
        <table>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
            {% for user in list_users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {{ role }}
                        {% endfor %}
                    </td>
                    <td><a href="{{ path('admin_user_edit', {'id': user.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}