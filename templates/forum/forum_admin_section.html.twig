<div class="forum__ajout__partie">
    <h3>Ajouter une partie</h3>

    {{ form_start(form, {'action': path('forum_admin_section') }) }}
        {{ form_errors(form) }}
        {{ form_errors(form.section_name) }}
        {{ form_errors(form.description) }}
        {{ form_errors(form.access) }}
        <div class="form__step">
            {{ form_label(form.section_name, "Nom de la partie") }}
            {{ form_widget(form.section_name) }}
            <button type="button" data-form-step="next">Suivant</button>
        </div>
        <div class="form__step">
            {{ form_label(form.description, "Description de la partie") }}
            {{ form_widget(form.description) }}
            <button type="button" data-form-step="next">Suivant</button>
        </div>
        <div class="form__step">
            {{ form_label(form.access, "Droit d'acc√®s") }}
            {{ form_widget(form.access) }}

            <button type="button" data-form-step="submit" data-url="{{ path('forum_admin_section') }}">Envoyer</button>
        </div>
    {{ form_end(form) }}
</div>